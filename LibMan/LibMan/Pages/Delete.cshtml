@page
@model LibMan.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="book-card fade-in" style="max-width: 600px; margin: 0 auto; text-align: center;">
    <h1 style="margin-bottom: 20px;">🗑️ Remove Book From Library</h1>
    
    <div style="background: #FFF3CD; border: 2px solid #FFC107; border-radius: 10px; padding: 20px; margin-bottom: 30px;">
        <h3 style="color: #856404; margin-bottom: 15px;">⚠️ Are you sure you want to delete this book?</h3>
        <p style="color: #856404; margin: 0;">This action cannot be undone.</p>
    </div>
    
    <div style="background: #FFF8DC; padding: 25px; border-radius: 15px; margin-bottom: 30px;">
        <h2 style="color: #DAA520; margin-bottom: 20px;">@Html.DisplayFor(model => model.Books.Title)</h2>
        
        <div style="text-align: left; max-width: 400px; margin: 0 auto;">
            <div style="margin-bottom: 15px;">
                <strong style="color: #8B4513;">✍️ Author:</strong>
                <p style="color: #666; margin: 5px 0;">@Html.DisplayFor(model => model.Books.Author)</p>
            </div>
            
            <div style="margin-bottom: 15px;">
                <strong style="color: #8B4513;">📄 Pages:</strong>
                <p style="color: #666; margin: 5px 0;">@Html.DisplayFor(model => model.Books.Pages) pages</p>
            </div>
            
            <div style="margin-bottom: 15px;">
                <strong style="color: #8B4513;">📌 Status:</strong>
                <p style="color: #666; margin: 5px 0;">@Html.DisplayFor(model => model.Books.ReadingStatus)</p>
            </div>
        </div>
    </div>
    
    <form method="post" style="margin-top: 30px;">
        <input type="hidden" asp-for="Books.Title" />
        <div style="display: flex; gap: 15px; justify-content: center;">
            <input type="submit" value="🗑️ Yes, Delete" class="btn btn-primary" style="background: #dc3545; border: none; padding: 12px 30px; font-size: 1.1rem;" />
            <a asp-page="./Welcome" class="btn-secondary" style="text-decoration: none; padding: 12px 30px;">← Cancel</a>
        </div>
    </form>
</div>
